<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="DocumentDBTodo.LoginPage" BackgroundColor="Black">
	<ContentPage.Content>
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10" BackgroundColor="Black">
            <Label TextColor="White" FontSize="20" HorizontalOptions="Center">
                Welcome to
            </Label>
            <Label TextColor="Teal" FontSize="30" FontAttributes="Bold" Margin="0,0,0,15" HorizontalOptions="Center">
                Tech Summit
            </Label>
            <Image x:Name="loginImage" Margin="0,0,0,15" WidthRequest="140"/>
            <Label Text="Username:" TextColor="White"/>
            <Entry x:Name="nameInput" Placeholder="input your username here" BackgroundColor="White" TextColor="Gray"/>
            <Label Text="Password:" TextColor="White"/>
            <Entry x:Name="pwdInput" Placeholder="input your password here" IsPassword="true"  BackgroundColor="White" TextColor="Gray"/>
            <Button x:Name="LoginBtn" Text="Login" BackgroundColor="Teal" TextColor="White" Margin="0,15" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
